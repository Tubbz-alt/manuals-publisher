#!/usr/bin/env ruby

require File.expand_path("../../config/environment", __FILE__)
require "cli_manual_section_remover"

def usage
  STDERR.puts %(
USAGE:

  ./#{File.basename(__FILE__)} manual_id section_id organisation_slug
  )
end

unless ARGV.size == 3
  usage
  exit 1
end

manual_id = ARGV.fetch(0)
section_id = ARGV.fetch(1)
organisation_slug = ARGV.fetch(2)

begin
  CliManualSectionRemover.new(
    manual_id: manual_id,
    section_id: section_id,
    organisation_slug: organisation_slug,
  ).call

rescue CliManualSectionRemover::NoUserConfirmation
  exit 1

rescue
  usage
  exit 1
end
